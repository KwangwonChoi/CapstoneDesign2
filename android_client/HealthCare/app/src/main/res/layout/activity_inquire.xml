<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.InquireActivity">

    <TextView
        android:id="@+id/inq_title_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/inq_title_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/inq_title_label"
        />

    <TextView
        android:id="@+id/inq_contents_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/inq_title_input"
        android:text="Contents"/>

    <EditText
        android:id="@+id/inq_contents_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/inq_contents_label"
        />

    <Button
        android:id="@+id/inq_send_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/inq_cancel_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Send"
        />

    <Button
        android:id="@+id/inq_cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/inq_send_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Cancel"
        />


</android.support.constraint.ConstraintLayout>