<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.NotificatedActivity">

    <TextView
        android:id="@+id/noti_date_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textSize="15dp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/noti_date_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/noti_date_label" />

    <TextView
        android:id="@+id/noti_detail_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Details"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/noti_date_content" />

    <TextView
        android:id="@+id/noti_detail_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/noti_detail_label" />

    <TextView
        android:id="@+id/noti_state_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="State"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/noti_detail_content" />

    <TextView
        android:id="@+id/noti_state_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@id/noti_state_label" />

    <Button
        android:id="@+id/noti_cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        android:text="Cancel"
        />


</android.support.constraint.ConstraintLayout>